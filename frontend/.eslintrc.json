{
  "root": true,
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "@typescript-eslint/no-unused-vars": "off",
    "vue/multi-word-component-names": "off"
  },
  "env": {
    "node": true
  }
}
