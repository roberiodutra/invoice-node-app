{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@tests/*": [
        "./src/tests/*"
      ]
    }
  }
}
